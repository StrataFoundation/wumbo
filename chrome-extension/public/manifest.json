{
  "manifest_version": 2,

  "name": "Wum.bo",
  "description": "Wum.bo Creator Coins",
  "version": "1.0",

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
      {
          "matches": ["https://twitter.com/*"],
          "js": ["js/vendor.js", "js/content_script.js"]
      },
      {
        "matches": ["https://hello.com/*"],
        "js": ["js/vendor.js", "js/oauth.js"]
      }
  ],

  "background": {
    "scripts": ["js/vendor.js", "js/background.js"]
  },

  "permissions": [
    "storage",
    "<all_urls>"
  ]
}